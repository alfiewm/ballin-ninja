<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09d05b"
    android:orientation="vertical"
    tools:context="meng.statusbartint.ui.SolidStatusBarActivity">

    <FrameLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0000ff"
        android:clickable="true">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="导航栏"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </FrameLayout>

    <Button
        android:id="@+id/switch_status_bar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:onClick="onClick"
        android:text="切换状态栏图标颜色（原生>=6.0, MIUI>=4.4)" />

    <Button
        android:id="@+id/switch_status_bar_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="切换状态栏图标背景及图标及导航栏（Android>=5.0)" />

    <Button
        android:id="@+id/btn_pop_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="测试popupWindow" />

</LinearLayout>
