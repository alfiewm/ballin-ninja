<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengwang.ui.activity.FavMainActivity" >

    <Button
        android:id="@+id/control_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/controlling_camera" />

    <Button
        android:id="@+id/from_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_be_continue" />

    <Button
        android:id="@+id/customize_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_be_continue" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_be_continue" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_be_continue" />

</LinearLayout>